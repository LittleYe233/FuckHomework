{
  "$schema": "http://json-schema.org/schema",
  "$id": "config.schema.json",
  "type": "object",
  "description": "Project configuration",
  "properties": {
    "version": {
      "type": "integer",
      "description": "The version number of the project configuration.",
      "minimum": 1,
      "maximum": 1,
      "default": 1
    },
    "server": {
      "$ref": "./server.schema.json"
    },
    "homework": {
      "$ref": "./homework.schema.json"
    }
  },
  "required": ["version"]
}
