{
  "$schema": "http://json-schema.org/schema",
  "$id": "rules.filename_check.schema.json",
  "type": "object",
  "description": "Rule of checking filename of received assignments.",
  "properties": {
    "type": {
      "type": "string",
      "description": "Type of a rule.",
      "const": "filename_check"
    },
    "whitelist": {
      "type": "array",
      "description": "Rule whitelist.",
      "items": {
        "type": "string"
      }
    },
    "blacklist": {
      "type": "array",
      "description": "Rule blacklist.",
      "items": {
        "type": "string"
      }
    },
    "priority": {
      "type": "string",
      "description": "Validation priority between whitelist and blacklist. \"whitelist\" means whitelist is prior to blacklist; \"blacklist\" is similar. Default to \"whitelist\".",
      "enum": ["whitelist", "blacklist"],
      "default": "blacklist"
    }
  },
  "required": ["type"]
}